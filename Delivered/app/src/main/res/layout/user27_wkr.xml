<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:text="문의 내용 작성 "
        android:textSize="30dp"></TextView>

    <LinearLayout
        android:layout_margin="20dp"
        android:layout_width="match_parent"
        android:layout_height="30dp"
        android:orientation="horizontal">

        <TextView
            android:layout_width="26dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="20dp"

            android:textStyle="bold"></TextView>

        <TextView
            android:id="@+id/inquiry_wkrtjd"
            android:layout_width="59dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="분류"
            android:textSize="20dp"
            android:textStyle="bold"></TextView>

        <EditText

            android:id="@+id/app_inquiry_ed1"
            android:layout_width="281dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"></EditText>


    </LinearLayout>


   <LinearLayout
    android:layout_margin="20dp"

    android:orientation="horizontal"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


       <TextView
           android:layout_weight="1"
           android:layout_width="26dp"
           android:layout_height="wrap_content"
           android:textSize="20dp"

           android:textStyle="bold"></TextView>
       <TextView
           android:layout_weight="1"
           android:id="@+id/inquiry_wpahr"
           android:layout_width="57dp"
           android:layout_height="wrap_content"
           android:text="제목"
           android:textSize="20dp"
           android:textStyle="bold"></TextView>

       <EditText
           android:layout_weight="1"
           android:id="@+id/app_inquiry_ed2"
           android:layout_width="287dp"
           android:layout_height="wrap_content"></EditText>


</LinearLayout>




    <LinearLayout
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="100dp">

        <TextView
            android:id="@+id/inquiry_sodyd"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:text="내용 입력 하기 "
            android:textSize="20dp"
            android:textStyle="bold"></TextView>

        <EditText
            android:id="@+id/app_inquiry_ed3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text=""></EditText>
</LinearLayout>

<LinearLayout
    android:layout_margin="20dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <Button
        android:id="@+id/app_inquiryok"
        android:layout_width="match_parent"
        android:layout_height="50dp"

        android:layout_weight="1"
        android:background="#4E8DF5"
        android:text="작성하기 "
        android:textColor="#ffffff">

    </Button>

</LinearLayout>


</LinearLayout>
