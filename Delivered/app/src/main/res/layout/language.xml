<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >
<ScrollView
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Button
            android:id="@+id/lang_korean"
            android:layout_width="match_parent"
            android:layout_height="100dp"


            android:background="#00ff0000"
            android:drawableLeft="@drawable/kor"
            android:text="한국어"
            android:textSize="20dp"
            android:textStyle="bold"></Button>

        <Button
            android:id="@+id/lang_english"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00ff0000"

            android:drawableLeft="@drawable/alrnr1"
            android:text="English"
            android:textSize="20dp"

            android:textStyle="bold"></Button>


        <Button
            android:id="@+id/lang_chinese"
            android:layout_width="match_parent"

            android:layout_height="wrap_content"
            android:background="#00ff0000"

            android:drawableLeft="@drawable/wndrnr1"
            android:text="汉语"
            android:textSize="20dp"

            android:textStyle="bold"

            ></Button>


        <Button
            android:id="@+id/lang_japanese"
            android:layout_width="match_parent"
            android:layout_height="113dp"
            android:background="#00ff0000"
            android:drawableLeft="@drawable/dlfqhs1"
            android:text="日本語"
            android:textSize="20dp"

            android:textStyle="bold"

            ></Button>


    </LinearLayout>


</ScrollView>

</LinearLayout>