<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"

    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_editinfo1"
            android:layout_width="159dp"
            android:layout_height="93dp"
            android:layout_margin="20dp"

            android:layout_weight="1"
            android:background="@drawable/border"

            android:drawableTop="@drawable/user06_1"
            android:gravity="center"
            android:text="회원정보 변경"
            android:textColor="#87898C"


            android:textSize="20dp"
            android:textStyle="bold" />

        <Button
            android:id="@+id/btn_orderlist"
            android:layout_width="151dp"
            android:layout_height="98dp"
            android:layout_margin="30dp"
            android:layout_weight="2"
            android:background="@drawable/border"

            android:drawableTop="@drawable/user06_2"
            android:gravity="center"

            android:text="주문 내역"
            android:textColor="#87898C"

            android:textSize="20dp"

            android:textStyle="bold" />

    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btn_myreview"
            android:layout_width="160dp"
            android:layout_height="113dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:drawableTop="@drawable/user06_3"
            android:gravity="center"
            android:text="내 리뷰 보기"

            android:textColor="#87898C"

            android:textSize="20dp"

            android:textStyle="bold" />


        <Button
            android:id="@+id/btn_notice"
            android:layout_width="160dp"
            android:layout_height="121dp"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:drawableTop="@drawable/user06_4"

            android:gravity="center"
            android:text="공지사항"


            android:textColor="#87898C"

            android:textSize="20dp"

            android:textStyle="bold" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <Button
            android:id="@+id/btn_servicecenter"
            android:layout_width="160dp"
            android:layout_height="122dp"
            android:layout_margin="20dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:drawableTop="@drawable/user06_5"
            android:gravity="center"
            android:text="장바구니"
            android:textColor="#87898C"

            android:textSize="20dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btn_preference"
            android:layout_width="160dp"
            android:layout_height="120dp"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:drawableTop="@drawable/user06_6"
            android:gravity="center"
            android:text=" 환경설정 "
            android:textColor="#87898C"
            android:textSize="20dp"
            android:textStyle="bold" />

    </LinearLayout>

    <LinearLayout
        android:layout_weight="1"
        android:layout_width="match_parent"
        android:layout_height="157dp"
        android:orientation="horizontal">

        <Button
            android:layout_weight="1"
            android:id="@+id/btn_homeinfo"
            android:layout_width="160dp"
            android:layout_height="99dp"
            android:layout_margin="20dp"
            android:background="@drawable/border"
            android:drawableTop="@drawable/user06_7"
            android:gravity="center"
            android:text=" 홈페이지 정보"
            android:textColor="#87898C"

            android:textSize="20dp"
            android:textStyle="bold" />


        <Button
            android:id="@+id/btn_inquiry"
            android:layout_width="160dp"
            android:layout_height="109dp"
            android:layout_margin="30dp"
            android:layout_weight="1"
            android:background="@drawable/border"
            android:drawableTop="@drawable/btn_inquiry12"
            android:gravity="center"
            android:text=" 앱 문의"
            android:textColor="#87898C"
            android:textSize="20dp"
            android:textStyle="bold" />


    </LinearLayout>


</LinearLayout>