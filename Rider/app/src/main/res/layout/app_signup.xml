<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="DeliBird"
        android:gravity="center_horizontal"
        android:textSize="40dp"
        android:layout_marginTop="20dp"
        android:textStyle="bold"
        />

    <TextView

        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="회원가입"
        android:gravity="center_horizontal"
        android:textSize="30dp"
        android:layout_marginTop="10dp"
        />



    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이디"
        android:layout_marginTop="15dp"
        android:textStyle="bold"/>




<LinearLayout
android:layout_width="match_parent"
android:layout_height="wrap_content"
android:orientation="horizontal">

    <EditText
        android:id="@+id/user_signup_ID"
        android:layout_width="309dp"
        android:layout_height="wrap_content" />
    <Button
        android:background="#4E8DF5"
        android:textColor="#ffffff"
        android:id="@+id/sig_gg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="중복확인">

    </Button>
</LinearLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="비밀번호"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/user_signup_pw"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />



    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="이름"
        android:textStyle="bold"/>

    <EditText
        android:id="@+id/user_signup_name"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <TextView

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="전화번호('-'없이 숫자만 입력)"
        android:textStyle="bold"/>

    <EditText
        android:inputType="number"
        android:id="@+id/user_signup_call"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>



    <Button
        android:background="#4E8DF5"
        android:textColor="#ffffff"
    android:id="@+id/sig"
    android:layout_width="400dp"
    android:layout_height="wrap_content"
    android:text="딜리버드 시작하기"
    android:layout_marginTop="15dp"
    android:textSize="19dp"
    android:textStyle="bold"
    ></Button>


</LinearLayout>