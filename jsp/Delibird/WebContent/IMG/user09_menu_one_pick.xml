<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <TextView
        android:id="@+id/user09_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal"
        android:text="매장이름"
        android:textSize="35dp"
        android:textStyle="bold" />
    <ScrollView
        android:id="@+id/reception_check_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fillViewport="true"
        android:layout_marginTop="10dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/Menu_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:text="고기듬뿍 김치찌개"
                android:textSize="25dp" />

            <TableLayout
                android:id="@+id/tableLayout1"
                android:layout_width="380dp"
                android:layout_height="wrap_content"
                android:stretchColumns="*"
                android:layout_marginTop="5dp"
                android:layout_gravity="center_horizontal"
                >

                <TableRow android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/rkrur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:gravity="center"
                        android:text="가격"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/menu_won"
                        android:layout_width="275dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="14000원"
                        android:textAlignment="textEnd"
                        android:textSize="20dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_margin="10dp"
                        android:gravity="center"
                        android:text="원"
                        android:textSize="20dp" />

                </TableRow>

                <ImageView
                    android:id="@+id/user09_img"
                    android:layout_width="match_parent"
                    android:layout_height="357dp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="81dp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/tnfid"
                        android:layout_width="109dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="15dp"
                        android:gravity="center"
                        android:text="수량"
                        android:textSize="20dp"
                        android:textStyle="bold" />

                    <Button
                        android:id="@+id/user09_mi"
                        android:layout_width="wrap_content"
                        android:layout_height="37dp"
                        android:layout_gravity="bottom"
                        android:text="-" />

                    <EditText
                        android:id="@+id/user09_count"
                        android:layout_width="93dp"
                        android:layout_height="36dp"
                        android:layout_gravity="bottom"
                        android:layout_marginTop="15dp"
                        android:gravity="center_horizontal"
                        android:hint="1"
                        android:text="1"
                        android:textSize="10dp" />

                    <Button
                        android:id="@+id/user09_plus"
                        android:layout_width="wrap_content"
                        android:layout_height="36dp"
                        android:layout_gravity="bottom"
                        android:text="+" />
                </LinearLayout>

                <TableRow>

                    <TextView
                        android:id="@+id/chdrkrur"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="총 가격"
                        android:textAlignment="textStart"
                        android:textSize="15dp"
                        android:textStyle="bold" />

                    <TextView
                        android:gravity="right"
                        android:id="@+id/menu_Endwon"
                        android:layout_width="221dp"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="**"
                        android:textSize="15dp" />
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:text="원"

                        android:textSize="15dp" />

                </TableRow>
            </TableLayout>

            <Button
                android:id="@+id/btn_order_add"
                android:layout_width="340dp"
                android:layout_height="68dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="25dp"
                android:background="#8FCEFF"
                android:text="장바구니로"
                android:textColor="#ffffff"
                android:textSize="20dp" />
        </LinearLayout>
    </ScrollView>
</LinearLayout>