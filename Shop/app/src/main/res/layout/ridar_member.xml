<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/scroll2">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:textSize="30dp"

                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="라이더 회원가입 ">
            </TextView>

            <TextView
                android:id="@+id/rider_signup"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="아이디">
            </TextView>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/rider_signup_ID"
                    android:layout_width="330dp"
                    android:layout_height="wrap_content"
                    android:text=""></EditText>
                <Button
                    android:textColor="#ffffff"
                    android:background="#4E8DF5"
                    android:id="@+id/reider_signup_ck"
                    android:layout_width="wrap_content"
                    android:text="중복확인"
                    android:layout_height="wrap_content">
                </Button>

            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="비밀번호">

            </TextView>
            <EditText
                android:id="@+id/rider_signup_pw"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>



            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20dp"
                android:text="이름">

            </TextView>

            <EditText
                android:id="@+id/rider_signup_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </EditText>
<TextView
    android:layout_width="wrap_content"
    android:textSize="20dp"
    android:layout_height="wrap_content"
    android:text="주민번호"></TextView>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <EditText
                    android:layout_weight="2"
                    android:id="@+id/rider_signup_wn1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp" />
                <TextView
                    android:id="@+id/rider_signup_wn0"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:textSize="40dp">
                </TextView>

                <EditText
                    android:layout_weight="2"
android:id="@+id/rider_signup_wn2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="20dp">

                </EditText>
            </LinearLayout>


<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/sig_ii"
        android:layout_width="302dp"
        android:layout_height="wrap_content"
        android:text="상세주소"
        android:textSize="10dp" />

    <Button
        android:textColor="#ffffff"
        android:background="#4E8DF5"
        android:id="@+id/sig_tt"
        android:layout_width="105dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="주소찾기"
        android:textSize="15dp"></Button>
</LinearLayout>

            <EditText
                android:id="@+id/sig_iii"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </EditText>



            <TextView
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="은행 이름 을입력하세요  " />


            <EditText
                android:id="@+id/rider_signup_mo1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp" />


            <TextView
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="수당 지급 계좌 입력 하세요 (- 제외 )" />


            <EditText
                android:id="@+id/rider_signup_mo2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp" />

            <TextView
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="전화번호를 입력해주세요 (- 제외 ) " />


            <EditText
                android:id="@+id/rider_signup_call"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text=""
                android:textSize="20dp" />



            <Button
                android:textColor="#ffffff"
                android:background="#4E8DF5"
                android:id="@+id/riderSt"
                android:text="운행을시작하겠습니다"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            </Button>

        </LinearLayout>

    </ScrollView>

</LinearLayout>
