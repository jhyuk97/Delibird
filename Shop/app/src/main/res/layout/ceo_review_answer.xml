<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:background="#ffffff"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <ScrollView
        android:id="@+id/review_management_scroll_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/reviewImg"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="5dp"
                android:layout_weight="1"
                android:src="@drawable/bb_bottom_bar_top_shadow">

            </ImageView>


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

<TableRow>

    <TextView
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="리뷰번호:"
        android:textColor="@android:color/black"
        android:textSize="15dp"></TextView>


    <TextView
        android:id="@+id/ReviewNumber"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=""
        android:textSize="15dp"></TextView>

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"

        android:text="매장번호:"
        android:textColor="@android:color/black"
        android:textSize="15dp"></TextView>

    <TextView
        android:id="@+id/mknumber"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=""
        android:textSize="15dp"></TextView>

</TableRow>
            </TableLayout>


            <TableLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="vertical">
<TableRow>

    <TextView
        android:layout_width="107dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="작성자:"
        android:textColor="@android:color/black"
        android:textSize="15dp"></TextView>


    <TextView
        android:id="@+id/UserID"
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text=""
        android:textSize="15dp"></TextView>

    <TextView
        android:layout_width="60dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="제목: "
        android:textColor="@android:color/black"
        android:textSize="15dp"></TextView>

                <TextView
                    android:id="@+id/ReviewName"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text=""
                    android:textSize="15dp"></TextView>

</TableRow>

            </TableLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="작성일: "
                    android:textColor="@android:color/black"
                    android:textSize="20dp"></TextView>

                <TextView
                    android:id="@+id/Reviewday"
                    android:layout_width="321dp"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textSize="20dp"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:layout_weight="1"
                android:orientation="vertical">


                <TextView
                    android:id="@+id/reviewcontent"
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:gravity="center"
                    android:text=""
                    android:textSize="20dp"></TextView>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:orientation="horizontal">


                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"

                    android:text="댓글달기:"
                    android:textColor="@android:color/black"
                    android:textSize="15dp"></TextView>

                <EditText
                    android:id="@+id/review_answer"
                    android:layout_width="274dp"
                    android:layout_height="47dp"
                    android:layout_weight="1"
                    android:background="#ffffff"
                    android:textSize="15dp"></EditText>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="#ffffff"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/review_ck"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="2"
                    android:background="#4E8DF5"
                    android:text="답변하기"
                    android:textColor="#ffffff">

                </Button>

                <Button
                    android:id="@+id/esc"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_margin="10dp"
                    android:layout_weight="2"
                    android:background="#4E8DF5"
                    android:text="취소하기"
                    android:textColor="#ffffff">

                </Button>
            </LinearLayout>


        </LinearLayout>


    </ScrollView>

</LinearLayout>
